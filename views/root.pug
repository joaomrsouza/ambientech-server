extends ./templates/default

block head
  link(rel="stylesheet" href="/stylesheets/root.css")

mixin sensorInformation(title, value, updateDate)
  div.sensorInformation
    .header
      span= title 
    .value 
      span= value
    .update
      span Última atualização   
      span=updateDate

block content
  header Ambientech
  main 
    h2 Acompanhe o seu ambiente de forma simples
    div.two-data
      +sensorInformation("Temperatura", "23º", "17/01/2025")
      +sensorInformation("Umidade", "70%", "17/01/2025")
    div
      +sensorInformation("Qualidade do ar", "Boa", "17/01/2025")
    div.two-data
      +sensorInformation("Presença de fumaça", "35%", "17/01/2025")
      +sensorInformation("Detecção de gás inflamável", "70%", "17/01/2025")
    div 
      +sensorInformation("Chuva", "Não há indices de chuva", "17/01/2025")

